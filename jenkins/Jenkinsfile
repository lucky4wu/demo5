pipeline {
    agent {
        docker {
                    image 'gradle:jdk17-jammy'
                    args '-v /root/.gradle:/root/.gradle'
                }
    }

    stages {
        stage('Build') {
            steps {
                sh 'gradlew clean'
            }
        }
        stage('Test') {
            steps {
                sh 'gradlew build'
            }
        }
        stage('Deploy') {
            steps {
                sh 'gradlew bootjar'
                sh 'docker build -t spring-boot-docker .'
            }
        }
    }
}